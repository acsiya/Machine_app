<Page
    x:Class="Machine_APP.ProductEditbysingle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Machine_APP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
       
        <StackPanel Orientation="Vertical" Width="700">
            <StackPanel Orientation="Vertical" Width="500" Height="30">
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道编号"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
                <TextBox x:ConnectionId='20' Name="channelcode" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right" IsReadOnly="True"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="机器类型"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='19'  Name="MachineType"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="机器编号"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='18'  Name="MachineCode"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" IsReadOnly="True"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="商品名称"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='17'  Name="ProductName" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="商品价格"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='16'  Name="Price"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="促销价格"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='15'  Name="DiscountPrice"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="促销时间"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='14'  Name="DiscountDate" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X轴坐标"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='13'  Name="XFlag"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y轴坐标"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='12'  Name="YFlag"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道状态"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='11'  Name="ChannelStatus" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="商品图片"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='10'  Name="PictureUrl"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道长度"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='9'  Name="ChannelLength"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道宽度"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='8'  Name="ChannelWidth" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道类型"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='7'  Name="ChannelType"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="可售商品数量"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='6'  Name="ProductNum"  Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道容量"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='5'  Name="CapacityNum" Width="300" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="是否禁用"  Width="200" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <CheckBox x:ConnectionId='4'  Name="IsDisable" ></CheckBox>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30"></StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:ConnectionId='2' Name="but_save"                           Width="50" Height="50" HorizontalAlignment="Left" >
                    <Button.Background>
                        <ImageBrush ImageSource="/PIC/checked.png"/>
                    </Button.Background>
                </Button>
                <StackPanel Orientation="Horizontal" Width="100"></StackPanel>
                <Button x:ConnectionId='3' Name="but_cancel"   Width="50" Height="50"  HorizontalAlignment="Stretch"                         >
                    <Button.Background>
                        <ImageBrush ImageSource="/PIC/clear.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </StackPanel>


