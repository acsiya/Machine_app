<Page
    x:Class="Machine_APP.App_sys_config"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Machine_APP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
          <StackPanel Orientation="Vertical" Width="700">
            <StackPanel Orientation="Vertical" Width="500" Height="30">
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="基本参数配置"  Width="200" FontSize="40" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="配置编号"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='22'  Name="ConfigNo"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                <TextBlock Text="参数名称"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='23'  Name="ConfigName"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" IsReadOnly="True"></TextBox>
            </StackPanel>
          
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="参数类型"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='20'  Name="ConfigType" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                <TextBlock Text="机器编号"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='21'  Name="MachineCode1"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
          
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="系统设置表"  Width="200" FontSize="40" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
              
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="机器编号"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='18'  Name="MachineCode2" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                <TextBlock Text="货道数量"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='19'  Name="ChannelCount"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
         
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="货道层数"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='16'  Name="LayerRowCount"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                <TextBlock Text="货道列数"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='17'  Name="LayerColumnCount" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
           
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="请求地址"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='14'  Name="RequeryUrl"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                <TextBlock Text="IC 卡密码"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='15'  Name="ICardPassword"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
          
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="机器地址"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='12'  Name="MachineAddress" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                <TextBlock Text="经度"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='13'  Name="Longitude"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
            </StackPanel>
           
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="纬度"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='10'  Name="Latitude"  Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                <TextBlock Text="广告有效目录"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='11'  Name="AdvertisementDirectory" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="是否显示图片"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <CheckBox x:ConnectionId='8'  Name="IsDisplayPic" Width="150" ></CheckBox>
                <TextBlock Text="是否多选"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <CheckBox x:ConnectionId='9'  Name="IsCheckBox" Width="150"></CheckBox>

            </StackPanel>
         
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="运行模式"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='6'  Name="RunMode" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                <TextBlock Text="管理员电话"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='7'  Name="AlertMobile" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>

            </StackPanel>
         
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="管理员邮件"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='4'  Name="AlertEmail" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                <TextBlock Text="APP版本号"  Width="180" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                <TextBox x:ConnectionId='5'  Name="AppVersionID" Width="150" FontSize="25" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30"></StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:ConnectionId='2' Name="but_save"  Width="50" Height="50" HorizontalAlignment="Left" >
                    <Button.Background>
                        <ImageBrush ImageSource="/PIC/checked.png"/>
                    </Button.Background>
                </Button>
                <StackPanel Orientation="Horizontal" Width="100"></StackPanel>
                <Button x:ConnectionId='3' Name="but_cancel"   Width="50" Height="50"  HorizontalAlignment="Stretch" >
                    <Button.Background>
                        <ImageBrush ImageSource="/PIC/clear.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </StackPanel>
        
       
    </Grid>
</Page>

